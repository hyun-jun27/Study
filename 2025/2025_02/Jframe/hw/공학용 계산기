    private double getNumberFromInput() {
        try {
            String text = jTextField1.getText();
            switch (baseMode) {
                case "Hex":
                    return (double)Long.parseLong(text, 16);
                case "Bin":
                    return (double)Long.parseLong(text, 2);
                case "Oct":
                    return (double)Long.parseLong(text, 8);
                case "Dec":
                    default:
                return Double.parseDouble(text);
                }
        }catch(NumberFormatException e) {
        return 0.0;
        }
    }
    private void setNumberToOutput(double num) {
        if (baseMode.equals("Dec") || num != (long)num) {
            if (isScientificMode) { 
            jTextField1.setText(String.format("%E", num));
            }else { 
            jTextField1.setText(String.valueOf(num));
        }
        } 
        else {
            long longNum = (long)num;
            switch (baseMode) {
                case "Hex":
                    jTextField1.setText(Long.toHexString(longNum).toUpperCase());
                    break;
                case "Bin":
                    jTextField1.setText(Long.toBinaryString(longNum));
                    break;
                case "Oct":
                    jTextField1.setText(Long.toOctalString(longNum));
                    break;
                default:
                    jTextField1.setText(String.valueOf(longNum));
                    break;
        }
    }
}    
