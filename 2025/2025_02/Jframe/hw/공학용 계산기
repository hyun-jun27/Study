    }                                           

    private void jButton_equalActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        num2 = getNumberFromInput();
        switch (operator) {
            case "+":
                result = num1 + num2;
                break; 
            case "-":
                result = num1 - num2;
                break;
            case "*":
                result = num1 * num2;
                break;
            case "/":
                if (num2 == 0) {
                    jTextField1.setText("0   .");
                    return; 
                }else {
                    result = num1 / num2; 
                    break;
                }
            case "x^y":
                result = Math.pow(num1, num2);
                break;
            case "Mod":
                result = num1 % num2; // %  double/long   .
                break;
            case "And":
                result = (long)num1 & (long)num2;
                break;

            case "Xor":
                result = (long)num1 ^ (long)num2;
                break;

            case "Lsh":
                result = (long)num1 << (long)num2;
                break;
            case "Or":
                result = (long)num1 | (long)num2;
                break;                
        }

        setNumberToOutput(result);
    }                                             

    private void jButton_PMActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        double num = Double.parseDouble(jTextField1.getText());
        num = num * -1;
        jTextField1.setText(String.valueOf(num));
    }                                          

    private void jButton_1xActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        double num = Double.parseDouble(jTextField1.getText());
        
        if (num == 0) {
            jTextField1.setText("0   .");
        } else {
            num = 1 / num;
            setNumberToOutput(num);
        }
    }                                          

    private void jButton_npActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        int num = (int)Double.parseDouble(jTextField1.getText());
        int result = 1; 
        for (int i = 1; i <= num; i++) {
            result = result * i;
        }
        setNumberToOutput(result);
    }                                          

    private void jButton_x3ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        double num = Double.parseDouble(jTextField1.getText());
        double result = Math.pow(num, 3);
        setNumberToOutput(result);
    }                                          

    private void jButton_logActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        double num = Double.parseDouble(jTextField1.getText());
        double result = Math.log10(num);
        setNumberToOutput(result);
    }                                           

    private void jButton_lnActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        double num = Double.parseDouble(jTextField1.getText());
        double result = Math.log(num);
        setNumberToOutput(result);
    }                                          

