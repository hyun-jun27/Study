    private void jButton_x2ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        double num = Double.parseDouble(jTextField1.getText());
        double result = Math.pow(num, 2);
        setNumberToOutput(result);
    }                                          

    private void jButton_mcActionPerformed(java.awt.event.ActionEvent evt) {                                           
