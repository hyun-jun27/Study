    private void GradsActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        angleMode = "Grads";
    }                                     

    private void jButton_FEActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        isScientificMode = !isScientificMode;
        setNumberToOutput(getNumberFromInput());
    }                                          

    private void jButton18ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:\

        double decDegrees = getNumberFromInput();

        int d = (int) decDegrees;

        double minutesDecimal = (decDegrees - d) * 60.0; 
        int m = (int) minutesDecimal; 


        double secondsDecimal = (minutesDecimal - m) * 60.0; 

        double dmsResult = d + (m / 100.0) + (secondsDecimal / 10000.0); 

        setNumberToOutput(dmsResult);        
    }                                         

    private void jButton_sinActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    double num = getNumberFromInput();
    double result = 0.0;
    double numInRadians = num;
    if (angleMode.equals("Degrees")) {
        numInRadians = Math.toRadians(num);
    } else if (angleMode.equals("Grads")) {
        numInRadians = num * (Math.PI / 200.0);
    }
    if (isHyperbolic) { 
        if (isInverse) { 
            result = java.lang.Math.asin(num); 
        } else { 
            result = Math.sinh(numInRadians); 
        }
    } else { 
        if (isInverse) { 
            result = Math.asin(num); 
            if (angleMode.equals("Degrees")) {
                result = Math.toDegrees(result); 
            } else if (angleMode.equals("Grads")) {
                result = result * (200.0 / Math.PI); 
            }
        } else { 
            result = Math.sin(numInRadians); 
        }
    }
    setNumberToOutput(result);        
    }                                           

    private void jButton_cosActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    double num = getNumberFromInput();
    double result = 0.0;
    double numInRadians = num;
    if (angleMode.equals("Degrees")) {
        numInRadians = Math.toRadians(num);
    } else if (angleMode.equals("Grads")) {
        numInRadians = num * (Math.PI / 200.0);
    }
    if (isHyperbolic) { 
        if (isInverse) { 
            result = java.lang.Math.acos(num); 
        } else { 
            result = Math.cosh(numInRadians); 
        }
    } else { 
        if (isInverse) { 
            result = Math.acos(num); 
            if (angleMode.equals("Degrees")) {
                result = Math.toDegrees(result); 
            } else if (angleMode.equals("Grads")) {
                result = result * (200.0 / Math.PI); 
            }
        } else { 
            result = Math.cos(numInRadians); 
        }
    }
    setNumberToOutput(result);     
    }                                           

    private void jButton_tanActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    double num = getNumberFromInput();
    double result = 0.0;
    double numInRadians = num;
    if (angleMode.equals("Degrees")) {
        numInRadians = Math.toRadians(num);
    } else if (angleMode.equals("Grads")) {
        numInRadians = num * (Math.PI / 200.0);
    }
    if (isHyperbolic) { 
        if (isInverse) { 
            result = java.lang.Math.atan(num); 
        } else { 
            result = Math.tanh(numInRadians); 
        }
    } else { 
        if (isInverse) { 
            result = Math.tan(num); 
            if (angleMode.equals("Degrees")) {
                result = Math.toDegrees(result); 
            } else if (angleMode.equals("Grads")) {
                result = result * (200.0 / Math.PI); 
            }
        } else { 
            result = Math.tan(numInRadians); 
        }
    }
    setNumberToOutput(result);     
    }                                           

    private void jButton_FActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        String buttonText = evt.getActionCommand();
        String currentText = jTextField1.getText();
        jTextField1.setText(currentText + buttonText);
    }                                         

