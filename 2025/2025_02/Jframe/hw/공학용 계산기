    private void jButton_BackspaceActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        // TODO add your handling code here:
        String cntText = jTextField1.getText();
        int len = cntText.length();
        String newText = cntText.substring(0, len - 1);
        jTextField1.setText(newText);
    }                                                 

